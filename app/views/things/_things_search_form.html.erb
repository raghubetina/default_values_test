          });
      });
  </script>

  <div class="form-group">
    <%= f.label :decimal_column, "Decimal column" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :decimal_column_gteq, :class => "form-control", :placeholder => "Decimal column greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :decimal_column_lteq, :class => "form-control", :placeholder => "Decimal column less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :string_column_cont, "String column contains" %>
    <%= f.text_field :string_column_cont, :class => "form-control", :placeholder => "String column contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
